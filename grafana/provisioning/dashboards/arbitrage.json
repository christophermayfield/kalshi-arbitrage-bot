{
  "dashboard": {
    "title": "Kalshi Arbitrage Bot",
    "tags": ["arbitrage", "trading", "kalshi"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Profit",
        "type": "stat",
        "targets": [
          {
            "expr": "arbitrage_profit_cents_total",
            "legendFormat": "Total Profit (cents)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Opportunities Found",
        "type": "stat",
        "targets": [
          {
            "expr": "arbitrage_opportunities_total",
            "legendFormat": "Opportunities"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Executed Trades",
        "type": "stat",
        "targets": [
          {
            "expr": "arbitrage_executed_total",
            "legendFormat": "Executed"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "API Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "api_errors_total",
            "legendFormat": "Errors"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Profit Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(arbitrage_profit_cents_total[5m])",
            "legendFormat": "Profit Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 6}
      },
      {
        "id": 6,
        "title": "Active Positions",
        "type": "gauge",
        "targets": [
          {
            "expr": "active_positions",
            "legendFormat": "Positions"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 14}
      },
      {
        "id": 7,
        "title": "Cash Balance",
        "type": "stat",
        "targets": [
          {
            "expr": "cash_balance_cents",
            "legendFormat": "Balance"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 14}
      },
      {
        "id": 8,
        "title": "Orderbook Scans",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(orderbook_scans_total[5m])",
            "legendFormat": "Scans/sec"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 14}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  },
  "overwrite": true
}
