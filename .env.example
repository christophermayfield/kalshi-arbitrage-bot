# Kalshi API Configuration
KALSHI_API_KEY_ID=your_api_key_id
KALSHI_PRIVATE_KEY_PATH=~/.kalshi/private-key.pem
KALSHI_BASE_URL=https://demo-api.kalshi.co
KALSHI_DEMO_MODE=true

# Trading Configuration
TRADING_PAPER_MODE=true
TRADING_ARBITRAGE_THRESHOLD=0.99
TRADING_MIN_PROFIT_CENTS=10
TRADING_MAX_POSITION_CONTRACTS=1000
TRADING_MAX_ORDER_VALUE_CENTS=10000
TRADING_ORDER_TIMEOUT_SECONDS=30

# Risk Management
RISK_MAX_DAILY_LOSS_CENTS=10000
RISK_MAX_OPEN_POSITIONS=50
RISK_CIRCUIT_BREAKER_THRESHOLD=5

# Monitoring
MONITORING_LOG_LEVEL=INFO
MONITORING_METRICS_PORT=8000
MONITORING_NOTIFICATION_ENABLED=false
MONITORING_NOTIFICATION_WEBHOOK=

# Redis (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Database
DATABASE_PATH=data/arbitrage.db

# Sentry (optional)
SENTRY_ENABLED=false
SENTRY_DSN=
